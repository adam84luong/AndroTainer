<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/dis4"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/disText2"
        android:textAllCaps="true"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginHorizontal="20dp"
        android:paddingTop="14dp"
        android:text="You are about to delete the currently logged in user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_diag_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:fontFamily="@font/ubuntu"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="@string/dialogWarning"
        android:textColor="@color/disText1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_header" />


    <Button
        android:id="@+id/btn_delete_user_continue"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="35dp"
        android:backgroundTint="@color/dis4"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="right|center_vertical"
        android:letterSpacing="0.08"
        android:text="continue"
        android:textColor="@color/blue_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_diag_explanation" />

    <Button
        android:id="@+id/btn_delete_user_cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/dis4"
        android:fontFamily="@font/ubuntu_bold"
        android:letterSpacing="0.08"
        android:text="cancel"
        android:textColor="@color/blue_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_diag_explanation" />


</androidx.constraintlayout.widget.ConstraintLayout>